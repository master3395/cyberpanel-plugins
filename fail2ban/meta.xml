<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <name>Fail2ban Security Manager</name>
    <type>security</type>
    <version>1.0.0</version>
    <description>Advanced fail2ban management plugin for CyberPanel with modern UI, real-time monitoring, and comprehensive security features.</description>
    <author>Master3395</author>
    <website>https://newstargeted.com</website>
    <license>MIT</license>
    <category>Security</category>
    <compatibility>
        <min_version>2.5.5</min_version>
        <max_version>3.0.0</max_version>
    </compatibility>
    <requirements>
        <os>AlmaLinux 9.6</os>
        <software>fail2ban</software>
        <software>firewall-cmd</software>
    </requirements>
    <features>
        <feature>Real-time fail2ban monitoring</feature>
        <feature>IP whitelist/blacklist management</feature>
        <feature>Jail configuration and control</feature>
        <feature>Mobile-friendly responsive UI</feature>
        <feature>Security statistics and analytics</feature>
        <feature>Automated threat detection</feature>
        <feature>Email notifications</feature>
        <feature>Log analysis and reporting</feature>
    </features>
    <url>/plugins/fail2ban/</url>
    <settings_url>/plugins/fail2ban/settings/</settings_url>
    <enable_url>/plugins/fail2ban/api/toggle-plugin/</enable_url>
    <restart_url>/plugins/fail2ban/api/restart/</restart_url>
    <restart_litespeed_url>/plugins/fail2ban/api/restart-litespeed/</restart_litespeed_url>
</plugin>
